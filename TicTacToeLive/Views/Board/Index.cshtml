<div class="container board-container">
    <div data-spot="0"></div>
    <div data-spot="1"></div>
    <div data-spot="2"></div>
    <div data-spot="3"></div>
    <div data-spot="4"></div>
    <div data-spot="5"></div>
    <div data-spot="6"></div>
    <div data-spot="7"></div>
    <div data-spot="8"></div>
</div>

<div class="row mt-5">
    <div class="col-md-12">
        <p>Share this unique game ID with your friends: <strong id="gameIdDisplay"></strong></p>
        <p>They can use this code to join your game and play against you!</p>
    </div>
</div>

<div class="container" id="chat-container">
    <h2>Chat</h2>
    <ul id="message-container">
      
    </ul>
    <div class="chat-input">
        <input id="message" class="input-group-text" />
        <button id="sendBtn" class="button button-primary">Send</button>
    </div>

</div>

<style>
    .board-container{
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-auto-rows: 1fr 1fr 1fr;
        margin-top: 5vh;
    }

    .board-container div{
        height: 20vh;
        max-width: 100%;
        text-align: center;
        font-size: 10vh;
    }

    .board-container div:nth-child(1),
    .board-container div:nth-child(2),
    .board-container div:nth-child(4),
    .board-container div:nth-child(5),
    .board-container div:nth-child(7),
    .board-container div:nth-child(8){
        border-right: 1px solid black;
    }

    .board-container div:nth-child(2),
    .board-container div:nth-child(3),
    .board-container div:nth-child(5),
    .board-container div:nth-child(6),
    .board-container div:nth-child(8),
    .board-container div:nth-child(9){
        border-left: 1px solid black;
    }

    .board-container div:nth-child(1),
    .board-container div:nth-child(2),
    .board-container div:nth-child(3),
    .board-container div:nth-child(4),
    .board-container div:nth-child(5),
    .board-container div:nth-child(6){
        border-bottom: 1px solid black;
    }   

    .board-container div:nth-child(4),
    .board-container div:nth-child(5),
    .board-container div:nth-child(6),
    .board-container div:nth-child(7),
    .board-container div:nth-child(8),
    .board-container div:nth-child(9){
        border-top: 1px solid black;
    }

    #chat-container{
        padding: 30px;
    }

    #chat-container {
        width: 100%;
        border: 1px solid #ccc;
        margin: 20px auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    #message-container {
        max-height: 300px;
        padding: 10px;
        overflow-y: auto;
    }

    .chat-input {
        display: flex;
        border-top: 1px solid #ccc;
        padding: 10px;
    }

        .chat-input input {
            flex: 1;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
            outline: none;
        }

        .chat-input button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
            margin-left: 10px;
        }

</style>


<script>
    document.getElementById("gameIdDisplay").textContent = sessionStorage.getItem("gameId");
</script>

