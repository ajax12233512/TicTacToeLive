<h2 id="turnLabel" class="text-center"></h2>
<h2 id="markLabel" class="text-center"></h2>
<div class="container board-container">
    <div data-spot="0"></div>
    <div data-spot="1"></div>
    <div data-spot="2"></div>
    <div data-spot="3"></div>
    <div data-spot="4"></div>
    <div data-spot="5"></div>
    <div data-spot="6"></div>
    <div data-spot="7"></div>
    <div data-spot="8"></div>
</div>

<div class="row mt-5">
    <div class="col-md-12">
        <p>Share this unique game ID with your friends: <strong id="gameIdDisplay"></strong></p>
        <p>They can use this code to join your game and play against you!</p>
    </div>
</div>

<div class="container">
    <button id="restartBtn" class="btn btn-danger">Restart Game</button>
</div>

<div class="container" id="chat-container">
    <h2>Chat</h2>
    <ul id="message-container">
      
    </ul>
    <div class="chat-input">
        <input id="message" class="input-group-text" />
        <button id="sendBtn" class="button button-primary">Send</button>
    </div>

</div>



<div class="modal fade" id="winModal" tabindex="-1" role="dialog" aria-labelledby="winModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="winModalLabel"><span id="modalTitleSpan"></span></h5>
                <button id="closeModalBtn" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><span id="modalWinnerSpan"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Request Rematch</button>
            </div>
        </div>
    </div>
</div>

<style>


    .board-container {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-auto-rows: 1fr 1fr 1fr;
        margin-top: 5vh;
        max-width: 900px;
    }

        .board-container div {
            height: 20vh;
            max-width: 100%;
            text-align: center;
            font-size: 10vh;
            background-color: #457b9d;
            border: 2px solid #f8f8f2;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .board-container div:nth-child(1),
            .board-container div:nth-child(2),
            .board-container div:nth-child(4),
            .board-container div:nth-child(5),
            .board-container div:nth-child(7),
            .board-container div:nth-child(8) {
                border-right: 1px solid white;
            }

            .board-container div:nth-child(2),
            .board-container div:nth-child(3),
            .board-container div:nth-child(5),
            .board-container div:nth-child(6),
            .board-container div:nth-child(8),
            .board-container div:nth-child(9) {
                border-left: 1px solid white;
            }

            .board-container div:nth-child(1),
            .board-container div:nth-child(2),
            .board-container div:nth-child(3),
            .board-container div:nth-child(4),
            .board-container div:nth-child(5),
            .board-container div:nth-child(6) {
                border-bottom: 1px solid white;
            }

            .board-container div:nth-child(4),
            .board-container div:nth-child(5),
            .board-container div:nth-child(6),
            .board-container div:nth-child(7),
            .board-container div:nth-child(8),
            .board-container div:nth-child(9) {
                border-top: 1px solid white;
            }

    #chat-container {
        padding: 30px;
    }

    #chat-container {
        width: 100%;
        border: 2px solid #457b9d;
        margin: 20px auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        background-color: #1a1a2e;
    }

    #message-container {
        max-height: 300px;
        padding: 10px;
        overflow-y: auto;
        list-style-type: none;
        margin: 0;
        padding-left: 0;
    }

        #message-container li {
            margin-bottom: 10px;
            padding: 5px;
            border: 1px solid #457b9d;
            background-color: black;
            border-radius: 5px;
        }

    .chat-input {
        display: flex;
        border-top: 2px solid #457b9d;
        padding: 10px;
        background-color: #1a1a2e;
    }

        .chat-input input {
            flex: 1;
            padding: 5px;
            border: 1px solid #457b9d;
            border-radius: 4px;
            outline: none;
            background-color: #f8f8f2;
            color: #1a1a2e;
        }

        .chat-input button {
            background-color: #457b9d;
            color: #f8f8f2;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
            margin-left: 10px;
        }

</style>


<script>
    document.getElementById("gameIdDisplay").textContent = sessionStorage.getItem("gameId");
</script>

